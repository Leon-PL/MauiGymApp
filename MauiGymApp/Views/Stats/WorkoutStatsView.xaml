<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiGymApp.Views.Stats.WorkoutStatsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:MauiGymApp.ViewModels.Stats"
    x:DataType="viewmodel:WorkoutStatsViewModel">

    <Grid RowDefinitions="Auto, *">
        <Picker />
        <FlexLayout Grid.Row="1">
            <FlexLayout
                Direction="Row"
                JustifyContent="SpaceBetween"
                Wrap="Wrap">

                <Border>
                    <Label Text="{Binding TotalWorkouts, StringFormat='Total Sets: {0}'}" />
                </Border>

                <Border>
                    <Label Text="{Binding TotalSets, StringFormat='Total Sets: {0}'}" />
                </Border>

                <Border>
                    <Label Text="{Binding TotalSets, StringFormat='Total Sets: {0}'}" />
                </Border>

                <Border >
                    <Label Text="{Binding TotalSets, StringFormat='Total Sets: {0}'}" />
                </Border>

                <Border >
                    <Label Text="{Binding TotalSets, StringFormat='Total Sets: {0}'}" />
                </Border>

                <Border >
                    <Label Text="{Binding TotalSets, StringFormat='Total Sets: {0}'}" />
                </Border>


            </FlexLayout>
        </FlexLayout>
    </Grid>

</ContentView>
